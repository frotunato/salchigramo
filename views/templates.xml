<odoo>
    <data>

        <template id="listing">
          <ul>
            <li t-foreach="objects" t-as="object">
              <a t-attf-href="#{ root }/objects/#{ object.id }">
                <t t-esc="object.display_name"/>
              </a>
            </li>
          </ul>
        </template>


        <template id="object">
          <h1><t t-esc="object.display_name"/></h1>
          <dl>
            <field name="name">Name</field>
            <field name="description">Description</field>
            <field name="platform">Platform</field>
            <field name="published">Published</field>
            <field name="image">Image</field>

            <!--
            <a class="thumbnail fancybox" rel="ligthbox" t-att-href="'data:image/png;base64,'+widget.image">
                <img class="align-self-center rounded-circle mr-3" alt=""
                t-att-src="'data:image/png;base64,'+widget.image"/>
            </a>
            -->
            <t t-foreach="object._fields" t-as="field">
              <dt><t t-esc="field"/></dt>
              <dd><t t-esc="object[field]"/></dd>
            </t>
            
            <!--<t>
              <dt>Value</dt>
              <dd><t t-esc="object['value']"</dd>
            </t>-->
          </dl>
        </template>

    </data>
</odoo>